<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/header">

        <TextView
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Base.TextAppearance.AppCompat.Title"
            android:text="Riepilogo Ordine"/>

        <TextView
            android:id="@+id/nome3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome ristorante"
            android:textSize="20dp"/>


        <TextView
            android:id="@+id/indirizzo3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Indirizzo ristorante"
            android:textSize="20dp"/>
    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/product_rv"
        android:layout_below="@+id/header"/>


        <TextView
            android:id="@+id/totale2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_rv"
            android:text="Totale: "
            android:textSize="20dp" />


        <Button
            android:id="@+id/pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:hint="@string/pay"
            android:background="@color/colore1"
            android:textSize="20dp"
            android:textColorHint="@color/cardview_light_background"/>

</RelativeLayout>